font pango:JetBrainsMono Nerd Font 10
default_border pixel 5

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $mod Mod4

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+Escape exit
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86Display exec arandr 
bindsym XF86Tools exec xterm -e nvim ~/.config/i3/config ~/.config/i3blocks/config
bindsym XF86Search exec chromium
bindsym XF86LaunchA exec dmenu_run -b -nb '#1d2021' -nf '#ebdbb2' -fn 'JetBrainsMono Nerd Font:style=bold:pixelsize=14'
bindsym XF86Explorer exec xterm -e ranger
bindsym $mod+Home exec reboot
bindsym $mod+End exec poweroff
bindsym $mod+Insert reload 
bindsym $mod+Delete restart

bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+s layout stacking
bindsym $mod+t split toggle

bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+d focus child

bindsym $mod+f fullscreen toggle

bindsym $mod+q kill

bindsym $mod+Return exec xterm

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+m mode "moving"
bindsym $mod+r mode "resizing"
bindsym Print mode "screenshot"

bindsym $mod+Shift+w exec sxiv -r -t -o ~/Pictures/Wallpapers/ | xargs -I{} cp {} ~/.config/wallpaper.jpg && feh --bg-scale --no-fehbg ~/.config/wallpaper.jpg

mode "moving" {
  bindsym h move left 50px
  bindsym j move down 50px
  bindsym k move up 50px
  bindsym l move right 50px
  bindsym c move absolute position center
  bindsym Escape mode "default"
}

mode "resizing" {
  bindsym h resize shrink width 50px
  bindsym j resize grow height 50px
  bindsym k resize shrink height 50px
  bindsym l resize grow width 50px
  bindsym Escape mode "default"
}

mode "screenshot" {
  bindsym --release f exec "maim -u ~/Pictures/Screenshots/scrot_$(date +%F-%H%M%S).png"
  bindsym --release w exec "maim -u -i $(xdotool getactivewindow) ~/Pictures/Screenshots/scrot_$(date +%F-%H%M%S).jpg"
  bindsym --release s exec "maim -u -s -o ~/Pictures/Screenshots/scrot_$(date +%F-%H%M%S).jpg"
  bindsym Escape mode "default"
}

bar {
  status_command i3blocks
  font pango:JetBrainsMono Nerd Font ExtraBold 10
  position top
  colors {
    background #1d2021
    statusline #ebdbb2
  }
}
