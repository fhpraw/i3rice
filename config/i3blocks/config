separator=true
separator_block_width=1

[caps-lock]
command=echo -e " CAPS $(xset -q | grep Caps | awk '{ print $4 }') "
interval=once
signal=10
color=#fabd2f

[battery]
command=echo -e " BAT $(acpi -b | grep -P -o '\d{1,3}%') "
interval=60
color=#fabd2f

[time]
command=echo -e " $(date '+%A %d %B %Y, %I:%M %p') "
interval=60
color=#fabd2f
