# client.focused_inactive #1d2021 #1d2021 #928374 #484e50   #1d2021
# client.unfocused        #1d2021 #1d2021 #928374 #292d2e   #1d2021
# client.urgent           #cc241d #cc241d #fbf1c7 #900000   #cc241d
# client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

# client.background       #fbf1c7
