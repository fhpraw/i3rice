# set mod to windows button
set $mod Mod4

# set titlebar font
font pango:JetBrainsMono Nerd Font ExtraBold 9

# title alignment
title_align center


# switch workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# put container/app window to desired workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# mute/unmute speaker
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# raise speaker volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%

# lower speaker volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%

# mute/unmute microphone
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# brightness down
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# brightness up
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10

# open arandr
bindsym XF86Display exec arandr 

# open browser
bindsym XF86Search exec firefox

# open dmenu
bindsym XF86LaunchA exec dmenu_run -fn 'JetBrainsMono Nerd Font:style=Bold:pixelsize=14' -nf '#fabd2f' -nb '#282828' -sf '#282828' -sb '#fabd2f'

# open filemanager ranger
bindsym XF86Explorer exec i3-sensible-terminal -e ranger

# exit i3
bindsym $mod+Shift+Escape exit

# reboot
bindsym $mod+Home exec reboot

# poweroff
bindsym $mod+End exec poweroff

# reload i3 config
bindsym $mod+Insert reload 

# restart i3
bindsym $mod+Delete restart

# quit window
bindsym $mod+q kill

# stacked mode
bindsym $mod+s layout stacking

# tabbed mode
bindsym $mod+w layout tabbed

# split mode
bindsym $mod+e layout toggle split

# focus parent
bindsym $mod+a focus parent

# focus child
bindsym $mod+d focus child

# split toggle
bindsym $mod+t split toggle

# fullscreen toggle
bindsym $mod+f fullscreen toggle

# floating toggle
bindsym $mod+space floating toggle

# focus floating--tiling mode
bindsym $mod+Shift+space focus mode_toggle

# focus navigation
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# open terminal emulator
bindsym $mod+Return exec i3-sensible-terminal --title Terminal

# open editor
bindsym $mod+Shift+Return exec i3-sensible-terminal --title Neovim -e nvim

# Caps Lock Indicator
bindsym --release Caps_Lock exec pkill -SIGRTMIN+10 i3blocks

# moving window mode
bindsym $mod+m mode "moving"
mode "moving" {
  bindsym h move left 30px
  bindsym j move down 30px
  bindsym k move up 30px
  bindsym l move right 30px
  bindsym c move absolute position center
  bindsym Escape mode "default"
}

# resizing window mode
bindsym $mod+r mode "resizing"
mode "resizing" {
  bindsym h resize shrink width 30px
  bindsym j resize grow height 30px
  bindsym k resize shrink height 30px
  bindsym l resize grow width 30px
  bindsym Escape mode "default"
}

# screenshot mode
bindsym $mod+Print mode "screenshot"
mode "screenshot" {
  bindsym --release f exec maim -u ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym --release w exec maim -u -i $(xdotool getactivewindow) ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym --release s exec maim -u -s -o ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym Escape mode "default"
}

# settings mode
bindsym XF86Tools mode "setting" 
mode "setting" {
  bindsym p exec i3-sensible-terminal -e pulsemixer
  bindsym n exec i3-sensible-terminal -e nmtui
  bindsym w exec sxiv -r -t -o ~/Images/Wallpapers/ | xargs -I{} cp {} ~/.config/background.jpg && xwallpaper --zoom ~/.config/background.jpg
  bindsym 3 exec i3-sensible-terminal --title i3\ config -e nvim ~/.config/i3/config ~/.config/i3blocks/config
  bindsym b exec i3-sensible-terminal --title bash\ config -e nvim ~/.bashrc ~/.bash_profile
  bindsym Escape mode "default"
}

# app mode
bindsym $mod+p mode "launcher"
mode "launcher" {
    bindsym h exec i3-sensible-terminal --title Htop -e htop
    bindsym Escape mode "default"
}

bar {
    position top
    status_command i3blocks
    font pango: JetBrainsMono Nerd Font Bold 8

    colors {
        background #32302f
        statusline #fabd2f
        separator #fabd2f

        focused_workspace #fabd2f #fabd2f #3c3836
        inactive_workspace #333333 #282828 #fabd2f
    }
}

client.focused          #fabd2f #fabd2f #3c3836 #2e9ef4 #fabd2f

for_window [class=".*"] border pixel 2
