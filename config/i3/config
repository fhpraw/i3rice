bar {
  status_command i3blocks
  font pango:JetBrainsMono Nerd Font ExtraBold 9
  position top
  colors {
    background $bg
    statusline $lyellow
    #                    border    backgr    text
    focused_workspace    $yellow $yellow $bg
    inactive_workspace   $bg     $bg     $fg
    active_workspace     $lgreen $lgreen $lyellow
    urgent_workspace     $red    $red    $bg
  }
}

# class                 border backgr text indicator child_border
client.focused          $lorange $lorange $bg    $purple $lorange
client.unfocused        $bg1    $bg1    $bg4   $purple $lbg
client.focused_inactive $bg1    $bg1    $bg4   $purple $bg1
client.urgent           $red    $red    $white $red    $red

