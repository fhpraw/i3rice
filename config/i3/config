# set mod to windows button
set $mod Mod4
set $browser firefox
set $terminal kitty

# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #8BE9FD   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2

# i3bar
bar {
    position top
    status_command i3blocks
    font pango: JetBrainsMono Nerd Font 9

    colors {
        background #282A36
        statusline #F8F8F2
        separator  #44475A

        focused_workspace  #44475A #44475A #F8F8F2
        active_workspace   #282A36 #44475A #F8F8F2
        inactive_workspace #282A36 #282A36 #BFBFBF
        urgent_workspace   #FF5555 #FF5555 #F8F8F2
        binding_mode       #FF5555 #FF5555 #F8F8F2
    }

}

# set titlebar font
font pango: JetBrainsMono Nerd Font 9

# title alignment
title_align left

# rules
for_window [class=".*"] border pixel 2
for_window [class="zoom"] floating enable

# switch workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# put container/app window to desired workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# dmenu
bindsym XF86LaunchA exec --no-startup-id dmenu_run -fn 'JetBrainsMono Nerd Font:style=Regular:pixelsize=14' -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf '#F8F8F2' 

# Speaker and Mic
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle; exec pkill -SIGRTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%; exec pkill -SIGRTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%; exec pkill -SIGRTMIN+1 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle; exec pkill -SIGRTMIN+4 i3blocks

# Brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5; exec pkill -SIGRTMIN+2 i3blocks
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5; exec pkill -SIGRTMIN+2 i3blocks

# app
bindsym XF86Display exec --no-startup-id arandr 
bindsym XF86Search exec --no-startup-id $browser
bindsym XF86Explorer exec --no-startup-id $terminal --title File\ Manager -e ranger

# i3
bindsym $mod+Shift+Escape exit
bindsym $mod+Insert reload 
bindsym $mod+Delete restart

# Power Management
bindsym $mod+Home exec reboot
bindsym $mod+End exec poweroff

# quit window
bindsym $mod+q kill

# window layout mode
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus parent and child
bindsym $mod+a focus parent
bindsym $mod+d focus child

# split toggle
bindsym $mod+t split toggle

# fullscreen toggle
bindsym $mod+f fullscreen toggle

# floating toggle
bindsym $mod+space floating toggle

# focus floating--tiling mode
bindsym $mod+Shift+space focus mode_toggle

# focus navigation
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# open terminal emulator
bindsym $mod+Return exec --no-startup-id $terminal --title Terminal

# Caps Lock Indicator
bindsym --release Caps_Lock exec pkill -SIGRTMIN+3 i3blocks

# make the currently focused window a scratchpad (minimize)
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window (unminimize)
bindsym $mod+minus scratchpad show

# moving window mode
bindsym $mod+m mode "Move"
mode "Move" {
    bindsym h move left 50px
    bindsym j move down 50px
    bindsym k move up 50px
    bindsym l move right 50px
    bindsym c move absolute position center
    bindsym Escape mode "default"
}

# resizing window mode
bindsym $mod+r mode "Resize"
mode "Resize" {
  bindsym h resize shrink width 30px
  bindsym j resize grow height 30px
  bindsym k resize shrink height 30px
  bindsym l resize grow width 30px
  bindsym Escape mode "default"
}

# screenshot mode
bindsym $mod+Print mode "Screenshot"
mode "Screenshot" {
  bindsym --release f exec --no-startup-id maim -u ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym --release w exec --no-startup-id maim -u -i $(xdotool getactivewindow) ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym --release s exec --no-startup-id maim -u -s -o ~/Images/Screenshots/scrot_$(date +%F-%H%M%S).jpg
  bindsym Escape mode "default"
}

# settings mode
bindsym XF86Tools mode "Settings" 
mode "Settings" {
  bindsym s exec --no-startup-id $terminal --title Pulsemixer -e pulsemixer
  bindsym n exec --no-startup-id $terminal --title Network\ Manager -e nmtui
  bindsym 3 exec --no-startup-id $terminal --title i3\ config -e nvim ~/.config/i3/config ~/.config/i3blocks/config
  bindsym b exec --no-startup-id $terminal --title bash\ config -e nvim ~/.bashrc ~/.bash_profile
  bindsym w exec --no-startup-id sxiv -b -r -t -o ~/Images/Wallpapers/ | xargs -I{} cp {} ~/.config/background.jpg && xwallpaper --zoom ~/.config/background.jpg
  bindsym Escape mode "default"
}
